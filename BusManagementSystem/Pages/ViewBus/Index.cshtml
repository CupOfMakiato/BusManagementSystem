@page
@model BusManagementSystem.Pages.ViewBus.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bus[0].BusNumber)
            </th>
            <th>
                Driver Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus[0].Status)
            </th>
            <th>
                Route
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bus[0].ModifiedAt)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bus)
        {
            <tr>
                <td>
                    @(item.BusNumber != null ? item.BusNumber : "N/A")
                </td>
                <td>
                    @(item.Driver != null ? item.Driver.Name.Trim() : "N/A")
                </td>
                <td>
                    @{
                        string statusName = item.Status switch
                        {
                            1 => "Active",
                            2 => "Inactive",
                            _ => "Maintenance",
                        };
                    }
                    @statusName 
                </td>
                <td>
                    @(item.AssignedRoute != null ? item.AssignedRoute.RouteName : "N/A")
                </td>
                <td>
                    @(item.CreatedAt != null ? item.CreatedAt : "N/A")
                </td>
                <td>
                    @(item.ModifiedAt != null ? item.ModifiedAt : "N/A")
                </td>

                <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.BusId">Edit</a> |
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@item.BusId">Details</a> |
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.BusId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
