@page
@model BusManagementSystem.Pages.ViewBus.DeleteModel
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Bus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bus Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bus.BusNumber)
        </dd>
        <dt class="col-sm-2">
            Driver Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bus.Driver.Name)
        </dd>
        <dt class="col-sm-2">
            Route Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bus.AssignedRoute.RouteName)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @{
                string statusName = Model.Bus.Status switch
                {
                    1 => "Active",
                    2 => "Inactive",
                    _ => "Maintenance",
                };
            }
            @statusName
        </dd>
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @(Model.Bus.CreatedAt != null ? Model.Bus.CreatedAt : "N/A")
        </dd>
        <dt class="col-sm-2">
            Modified At
        </dt>
        <dd class="col-sm-10">
            @(Model.Bus.ModifiedAt != null ? Model.Bus.ModifiedAt : "N/A")
        </dd>
        @* <dd class="col-sm-10">
            @(Model.Bus.ModifiedAt != null ? Model.Bus.ModifiedAt.Value.ToString("dd-MM-yyyy") : "N/A")
        </dd> *@
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Bus.BusId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
