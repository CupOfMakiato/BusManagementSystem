@page
@model BusManagementSystem.Pages.LoginModel
@{
    Layout = "_LoginLayout";
}



<style>
    body {
        background-color: #f0f2f5;
        padding-top: 5%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        margin: auto;
        max-width: 500px;
        padding: 40px;
        border-radius: 10px;
        border: none;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .card h2 {
            font-weight: 600;
            color: #343a40;
            margin-bottom: 20px;
        }

    .form-control {
        height: 45px;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
    }

    .btn-login {
        width: 100%;
        height: 45px;
        margin-top: 10px;
        font-weight: 600;
        border-radius: 8px;
        background-color: #007bff;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-login:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        width: 100%;
        height: 45px;
        margin-top: 10px;
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .alert {
        font-size: 14px;
        padding: 10px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }
</style>


<body>
    <div class="container">
        <div class="card">
            <h2 class="text-center">Login</h2>
            <hr />
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="control-label">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger text-center" role="alert">@Model.ErrorMessage</div>
                }
                <button type="submit" asp-page-handler="Login" class="btn btn-primary btn-login">Login</button>
                <a href="/Register" class="btn btn-secondary btn-login">Register</a>
                <a href="/Guest/Index" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
    </div>
</body>


@section Scripts {
    <script>
        // Optional: Hide error message after 2 seconds
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = document.querySelector(".alert-danger");
            if (errorMessage) {
                setTimeout(function () {
                    errorMessage.style.display = "none";
                }, 2000); // 2000 milliseconds = 2 seconds
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
