    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].Shift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Drivers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DriverId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DriverId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DriverId">Delete</a>
