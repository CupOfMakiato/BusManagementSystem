@page
@model BusManagementSystem.Pages.ViewDrivers.CreateModel

@{
    ViewData["Title"] = "Create Driver";
}

<h1>Create Driver</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Driver.Name" class="control-label"></label>
                <input asp-for="Driver.Name" class="form-control" />
                <span asp-validation-for="Driver.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.PhoneNumber" class="control-label"></label>
                <input asp-for="Driver.PhoneNumber" class="form-control" />
                <span asp-validation-for="Driver.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.Status" class="control-label"></label>
                <input asp-for="Driver.Status" class="form-control" />
                <span asp-validation-for="Driver.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.Shift" class="control-label"></label>
                <input asp-for="Driver.Shift" class="form-control" />
                <span asp-validation-for="Driver.Shift" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.Email" class="control-label"></label>
                <input asp-for="Driver.Email" class="form-control" />
                <span asp-validation-for="Driver.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 2%">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="/ViewDrivers/Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
