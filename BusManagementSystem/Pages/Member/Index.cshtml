@page
@model BusManagementSystem.Pages.Member.IndexModel
@{

    Layout = "_Layout"; // Assuming _Layout includes the login and authentication elements
    ViewData["Title"] = "Bus Ticket Registration - Member";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- Header Section -->
    <header class="header">
        <div class="header-content">
            <img src="~/images/logo.png" alt="Logo" class="logo">
            <h1>City Bus Management Center</h1>
            <div class="contact-info">
                <span>📍 Address: 1 Kim Ma, Ba Dinh, Ha Noi</span>
                <span>📞 Hotline: 19006836</span>
            </div>
        </div>
    </header>

    <!-- Navigation Bar -->
    <nav class="navbar">
        <a href="/Member">Home</a>
        <a href="/Member/RegisterTicket">Register Monthly Ticket</a>
        <a href="/Member/RegisterFreeTicket">Register Free Ticket</a>
        <a href="/Member/FAQ">FAQ</a>
    </nav>

    <!-- Main Section -->
    <main class="main-section">
        <h2>WELCOME TO OUR SERVICE</h2>
        <p>Welcome to our website for registering bus monthly tickets and free bus tickets. Our platform helps customers register quickly, conveniently, and saves time and travel costs.</p>

        <div class="ticket-options">
            <div class="ticket-option">
                <img src="~/images/monthly_ticket.png" alt="Monthly Ticket">
                <button onclick="location.href='/Member/RegisterTicket'">Register Monthly Ticket</button>
            </div>
            <div class="ticket-option">
                <img src="~/images/free_ticket.png" alt="Free Ticket">
                <button onclick="location.href='/Member/RegisterFreeTicket'">Register Free Ticket</button>
            </div>
        </div>
    </main>

</body>
</html>


<h1>
    Welcome to BusFinder!
</h1>
<h2>Route List</h2>

<form method="get">
    <input type="text" name="searchQuery" value="@Model.SearchQuery" placeholder="Search routes..." />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Route Name</th>
            <th>Start Location</th>
            <th>End Location</th>
            <th>Distance</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Route != null && Model.Route.Any())
        {
            foreach (var route in Model.Route)
            {
                        <tr>
                            <td>@route.RouteName</td>
                            <td>@route.StartLocation</td>
                            <td>@route.EndLocation</td>
                            <td>@route.Distance?.ToString("F2")</td>
                            <td>@route.Duration?.ToString()</td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="5">No routes found.</td>
                </tr>
        }
    </tbody>
</table>

