@page
@model BusManagementSystem.Pages.ViewRoute.CreateModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Route";
}

<h4>Create Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Route Name -->
            <div class="form-group">
                <label asp-for="Route.RouteName" class="control-label"></label>
                <input asp-for="Route.RouteName" class="form-control" />
                <span asp-validation-for="Route.RouteName" class="text-danger"></span>
            </div>

            <!-- Start Location -->
            <div class="form-group">
                <label asp-for="Route.StartLocation" class="control-label"></label>
                <input asp-for="Route.StartLocation" class="form-control" />
                <span asp-validation-for="Route.StartLocation" class="text-danger"></span>
            </div>

            <!-- End Location -->
            <div class="form-group">
                <label asp-for="Route.EndLocation" class="control-label"></label>
                <input asp-for="Route.EndLocation" class="form-control" />
                <span asp-validation-for="Route.EndLocation" class="text-danger"></span>
            </div>

            <!-- Distance -->
            <div class="form-group">
                <label asp-for="Route.Distance" class="control-label"></label>
                <input asp-for="Route.Distance" class="form-control" />
                <span asp-validation-for="Route.Distance" class="text-danger"></span>
            </div>

            <!-- Duration -->
            <div class="form-group">
                <label asp-for="Route.Duration" class="control-label"></label>
                <input asp-for="Route.Duration" class="form-control" />
                <span asp-validation-for="Route.Duration" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div style="color: red" id="error-message">@Model.Message</div>
            }

            <div class="form-group" style="margin-top: 2%">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="/ViewRoute/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = document.getElementById("error-message");
            if (errorMessage) {
                const message = errorMessage.textContent.trim();
                if (message !== "") {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                        window.location.href = '/ViewRoute/Index';
                    }, 1000);
                } else {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                    }, 1000);
                }
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
